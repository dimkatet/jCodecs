{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build:wasm": {
      "cache": false,
      "inputs": ["src/wasm/**", "../../Dockerfile", "../../emscripten-cross.txt"],
      "outputs": ["src/wasm/*.js"]
    },
    "build:ts": {
      "dependsOn": ["^build:ts"],
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": false
    },
    "test:browser": {
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build:ts"]
    },
    "clean": {
      "cache": false
    }
  }
}
