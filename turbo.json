{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build:wasm": {
      "cache": true,
      "outputs": ["wasm/**"]
    },
    "build": {
      "dependsOn": ["^build", "build:wasm"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test:browser": {
      "dependsOn": ["build"],
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  }
}
