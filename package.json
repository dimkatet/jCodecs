{
  "name": "jcodecs",
  "version": "0.0.0",
  "private": true,
  "description": "Image codecs for the browser using WebAssembly",
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "build:wasm": "turbo build:wasm",
    "build:ts": "turbo build:ts",
    "build:avif": "pnpm --filter @jcodecs/avif build",
    "dev": "turbo dev",
    "test": "turbo test",
    "test:browser": "pnpm vitest --config vitest.browser.config.ts",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "clean:wasm": "rm -rf packages/*/wasm/*.wasm packages/*/wasm/*.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.0",
    "@types/node": "^20.11.0",
    "@vitest/browser": "^1.3.0",
    "playwright": "^1.58.0",
    "turbo": "^2.0.0",
    "typescript": "^5.4.0",
    "vite": "^7.3.1",
    "vitest": "^1.3.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
