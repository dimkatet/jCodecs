{
  "name": "@dimkatet/jcodecs-core",
  "version": "0.3.0",
  "description": "Core utilities and types for jCodecs",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "require": "./dist/types.cjs"
    },
    "./memory": {
      "types": "./dist/memory.d.ts",
      "import": "./dist/memory.js",
      "require": "./dist/memory.cjs"
    },
    "./worker-pool": {
      "types": "./dist/worker-pool.d.ts",
      "import": "./dist/worker-pool.js",
      "require": "./dist/worker-pool.cjs"
    },
    "./codec-worker": {
      "types": "./dist/codec-worker.d.ts",
      "import": "./dist/codec-worker.js",
      "require": "./dist/codec-worker.cjs"
    },
    "./codec-worker-client": {
      "types": "./dist/codec-worker-client.d.ts",
      "import": "./dist/codec-worker-client.js",
      "require": "./dist/codec-worker-client.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "pnpm build:ts",
    "build:ts": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^4.0.18"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dimkatet/jCodecs.git",
    "directory": "packages/core"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
