{
  "name": "@dimkatet/jcodecs-auto",
  "version": "0.3.0",
  "description": "Auto-detect image format and select codec for jCodecs",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./decode": {
      "types": "./dist/decode.d.ts",
      "import": "./dist/decode.js",
      "require": "./dist/decode.cjs"
    },
    "./encode": {
      "types": "./dist/encode.d.ts",
      "import": "./dist/encode.js",
      "require": "./dist/encode.cjs"
    },
    "./worker": {
      "types": "./dist/worker-api.d.ts",
      "import": "./dist/worker-api.js",
      "require": "./dist/worker-api.cjs"
    },
    "./format-detection": {
      "types": "./dist/format-detection.d.ts",
      "import": "./dist/format-detection.js",
      "require": "./dist/format-detection.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "build:ts": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@dimkatet/jcodecs-core": "workspace:*"
  },
  "peerDependencies": {
    "@dimkatet/jcodecs-avif": "workspace:*",
    "@dimkatet/jcodecs-jxl": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@dimkatet/jcodecs-avif": {
      "optional": true
    },
    "@dimkatet/jcodecs-jxl": {
      "optional": true
    }
  },
  "devDependencies": {
    "@dimkatet/jcodecs-avif": "workspace:*",
    "@dimkatet/jcodecs-jxl": "workspace:*",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "avif",
    "jxl",
    "jpeg-xl",
    "image",
    "codec",
    "auto-detect",
    "wasm"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dimkatet/jCodecs.git",
    "directory": "packages/auto"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
